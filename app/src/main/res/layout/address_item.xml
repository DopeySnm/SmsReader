<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name_subscriber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="900"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/messages"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Bla bla Bla bla Bla bla Bla bla Bla bla Bla bla Bla bla Bla bla Bla bla Bla bla Bla bla Bla bla Bla bla Bla bla"
            app:layout_constraintStart_toStartOf="@id/name_subscriber"
            app:layout_constraintTop_toBottomOf="@id/name_subscriber" />

</androidx.constraintlayout.widget.ConstraintLayout>